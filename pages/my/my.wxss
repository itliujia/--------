@import "../../BaseWxss/11.wxss";

@import "../../BaseWxss/10.wxss";

page {
    background: #f4f4f4;
}

#header {
    width: 750rpx;
    height: 360rpx;
    align-items: center;
    overflow: hidden;
    position: relative;
}

#header .bg {
    width: 1000rpx;
    height: 360rpx;
    position: absolute;
    top: -100rpx;
    left: -100rpx;
    z-index: -99;
    transform: rotate(-8deg);
}

#header .my_box {
    display: flex;
    margin-top: 60rpx;
    margin-left: 50rpx;
    color: #fff;
}

#header .avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 100rpx;
    border: 8rpx rgba(255,255,255,0.6) solid;
    box-shadow: 0 0 20rpx rgba(0,0,0,0.07);
    overflow: hidden;
}

#header .avatar open-data {
    width: 180rpx;
    height: 180rpx;
}

#header .nickname {
    font-weight: bold;
    margin-top: 30rpx;
    font-size: 56rpx;
    height: 60rpx;
    line-height: 60rpx;
}

#header .xueyuan {
    padding-top: 10rpx;
    font-size: 26rpx;
    height: 30rpx;
    line-height: 30rpx;
    width: 460rpx;
    opacity: 0.7;
}

.icon_box {
    display: flex;
    margin: 0 50rpx;
    color: #fff;
}

.icon_box .icon {
    width: 220rpx;
    height: 120rpx;
}

.icon_box .icon_img {
    margin: 0rpx 80rpx;
    width: 55rpx;
    height: 60rpx;
}

.icon_box .icon_title {
    text-align: center;
    color: #515151;
    font-size: 26rpx;
    line-height: 50rpx;
    font-weight: bold;
}

.line {
    margin: 0 auto;
    margin-top: 40rpx;
    height: 8rpx;
    background: #515151;
    width: 260rpx;
    border-radius: 10rpx;
}

.cells {
    width: 570rpx;
    margin: 50rpx;
    margin-bottom: -10rpx;
    display: inline-block;
    color: #515151;
}

.cell {
    color: #515151;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    width: 650rpx;
    border-bottom: 1rpx rgba(0,0,0,0.03) solid;
    display: flex;
}

.cell .cell-bd {
    width: 370rpx;
}

.cell .cell-ft {
    width: 270rpx;
    text-align: right;
    font-size: 26rpx;
}

.cell .cell-bd .fa {
    margin-left: 10rpx;
    font-size: 36rpx;
    width: 70rpx;
}

.cell .cell-ft .fa {
    font-size: 34rpx;
}

.box {
    position: fixed;
    width: 550rpx;
    background: #fff;
    bottom: 150rpx;
    bottom: calc(150rpx + env(safe-area-inset-bottom));
    left: 80rpx;
    border-radius: 20rpx;
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    padding: 20rpx;
    display: flex;
}

.box .color {
    width: 80rpx;
    height: 80rpx;
    margin: 15rpx;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}

.box .color text {
    line-height: 80rpx;
    font-size: 50rpx;
}

button {
    margin: 0;
    padding: 0;
    text-align: left;
    border: none;
    box-sizing: content-box;
    border-radius: 0;
    background: none;
}

.button-hover {
    background: none;
}

button::after {
    border: none;
}

@keyframes living {
    0% {
        transform: scale(1);
        opacity: 0.5;
    }

    100% {
        transform: scale(4);
        opacity: 0;
    }
}

.cicle_bg {
    background: rgba(255,255,255,0.3);
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    position: absolute;
    top: 118rpx;
    left: 508rpx;
    z-index: -1;
    animation: living 6s linear infinite;
}