@import "../../../BaseWxss/1.wxss";

@import "../../../BaseWxss/11.wxss";

.fd-hd {
    position: relative;
    width: 100%;
    padding-top: 50rpx;
    height: 440rpx;
    display: flex;
    overflow: hidden;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0,0,0,0.6);
}

.fd-hd-bg {
    position: absolute;
    z-index: -2;
    left: 0;
    top: 0;
    width: 100%;
    height: 600rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
    transform: scale(1.2);
}

.fd-cover {
    z-index: 9999;
    width: 220rpx;
    height: 330rpx;
    margin-top: 80rpx;
    margin-left: 265rpx;
    border-radius: 20rpx;
    box-shadow: 0 30rpx 150rpx rgba(255,255,255,0.3);
}

.book_info {
    background: #fff;
    padding: 40rpx;
    color: #515151;
    margin-bottom: 20rpx;
}

.book_info .right {
    margin-left: 20rpx;
    margin-top: 10rpx;
    width: 430rpx;
}

.book_info .title {
    margin-bottom: 20rpx;
    font-size: 36rpx;
    font-weight: bold;
}

.book_info .info {
    font-size: 26rpx;
    color: #666;
    line-height: 46rpx;
}

.saler_info {
    display: flex;
    border-bottom: 1rpx #f4f4f4 solid;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
}

.saler_info .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
}

.saler_info .price {
    font-size: 32rpx;
}

.saler_info .nickname {
    font-size: 28rpx;
    font-weight: bold;
}

.saler_info .new_per {
    height: 24rpx;
    line-height: 24rpx;
    font-size: 22rpx;
    border: 1rpx #47a86c solid;
    border-radius: 10rpx;
    padding: 0 10rpx;
}

.wechat {
    margin-top: 10rpx;
    width: 80rpx;
    font-size: 22rpx;
    text-align: center;
}

.wechat .fa {
    font-size: 46rpx;
    line-height: 50rpx;
    height: 50rpx;
    width: 80rpx;
}