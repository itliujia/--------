.bg {
    position: relative;
    width: 100%;
    height: 100vh;
    align-items: center;
    overflow: hidden;
}

.bg .img {
    position: absolute;
    z-index: -2;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    filter: blur(10rpx);
    transform: scale(1.2);
}

.info {
    width: 600rpx;
    height: 600rpx;
    margin: 45rpx;
    margin-top: 100rpx;
    background: rgba(255,255,255,0.8);
    padding: 30rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}